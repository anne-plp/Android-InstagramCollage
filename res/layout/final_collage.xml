<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collage_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="true"
    android:orientation="vertical"
    android:padding="@dimen/step_1" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/step_1_2"
        android:text="@string/title_final"
        android:textSize="@dimen/text_big"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/step_1_8"
        android:background="@android:color/darker_gray" />

    <Button
        android:id="@+id/button_share"
        android:layout_width="match_parent"
        android:layout_height="@dimen/step_3"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/step_1"
        android:layout_marginTop="@dimen/step_1"
        android:gravity="center"
        android:text="@string/button_share" />

</LinearLayout>